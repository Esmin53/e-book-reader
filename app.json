{
  "expo": {
    "name": "ebookreader",
    "slug": "ebookreader",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/book_icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "permissions": ["READ_EXTERNAL_STORAGE", "WRITE_EXTERNAL_STORAGE"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/book_icon.png",
        "backgroundColor": "#121212"
      },
      "package": "e.book.reader"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/book_icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#121211"
        }
      ],
      "expo-sqlite",
      "@config-plugins/react-native-blob-util",
      "@config-plugins/react-native-pdf"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "e5e630e4-0d60-4d26-b618-6093f8fd4df8"
      }
    },
    "owner": "esmin53"
  }
}
