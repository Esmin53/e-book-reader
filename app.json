{
  "expo": {
    "name": "ebookreader",
    "slug": "ebookreader",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/book_icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/book_icon.png",
        "backgroundColor": "#121212"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/book_icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#121211"
        }
      ],
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
